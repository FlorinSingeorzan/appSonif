<mvc:View controllerName="sap.Sonif.controller.About"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" xmlns:microchart="sap.suite.ui.microchart"
	xmlns:f="sap.ui.layout.form">

	<Page showHeader="false" backgroundDesign="Info">
		<!-- <subHeader class="subHeaderDesign"> -->
		<mvc:XMLView viewName="sap.Sonif.view.Toolbar" />
		<!-- </subHeader> -->
		<Panel class="sapUiNoContentPadding">
			<content>
				<VBox fitContainer="true">
					<f:SimpleForm  minWidth="1024"
						maxContainerCols="2" editable="false" layout="ResponsiveGridLayout"
						title="Contributor" labelSpanL="4" labelSpanM="4" emptySpanL="0"
						emptySpanM="0" columnsL="2" columnsM="2">
						<f:content>
							<Title text="Siemens Abap Team Member" />
							<Label text="Name" />
							<Text text="Kovacs Timea" />
							<Image src="images/timea.jpg" densityAware="false"
								width="10rem">
								<layoutData>
									<FlexItemData growFactor="1" />
								</layoutData>
							</Image>
							<Label text="Facebook" />
							<Link href="https://www.facebook.com/kovacstimeax" text="Timea"/>
							<Label text="Linkedin"/>
							<Link href="https://www.linkedin.com/in/timea-kovacs-1228b4104/" text="My profile"/>
							<Label text="Webapp" />
							<Link href="https://appsonif.appspot.com" text="Sonif" emphasized="true"/>
						</f:content>
						<f:layoutData>
							<FlexItemData shrinkFactor="0" backgroundDesign="Solid"
								styleClass="sapContrastPlus" />
						</f:layoutData>
					</f:SimpleForm>
				</VBox>
				<FlexBox height="1rem"/>
				<VBox fitContainer="true">
					<f:SimpleForm minWidth="1024"
						maxContainerCols="2" editable="false" layout="ResponsiveGridLayout"
						title="Contributor" labelSpanL="4" labelSpanM="4" emptySpanL="0"
						emptySpanM="0" columnsL="2" columnsM="2">
						<f:content>
							<Title text="Siemens Abap Team Member" />
							<Label text="Name" />
							<Text text="Singeorzan Florin" />
							<Image src="images/florin.jpg" densityAware="false"
								width="10rem" height="15rem">
								<layoutData>
									<FlexItemData growFactor="1" />
								</layoutData>
							</Image>
							<Label text="Facebook" />
							<Link href="https://www.facebook.com/florin.sangeorzan" text="Florin"/>
							<Label text="Linkedin"/>
							<Link href="https://www.linkedin.com/in/singeorzan-florin-7b0b62142/" text="My profile"/>
							<Label text="Webapp" />
							<Link href="https://appsonif.appspot.com" text="Sonif" emphasized="true"/>
						</f:content>
						<f:layoutData>
							<FlexItemData shrinkFactor="0" backgroundDesign="Solid"
								styleClass="sapContrastPlus" />
						</f:layoutData>
					</f:SimpleForm>
				</VBox>
			</content>
		</Panel>
	</Page>

</mvc:View>
