<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
	xmlns:suite="sap.suite.ui.commons"
	controllerName="sap.suite.ui.commons.PrjTest.controller.NewsFeed">
	<Page title="{i18n>newsFeedPageTitle}"
		showNavButton="true"
		navButtonPress="onNavButtonPressed"
		backgroundDesign="Solid">
		<FlexBox width="auto" height="auto"  class="sapUiMediumMarginBegin sapUiMediumMarginEnd" justifyContent="Start" backgroundDesign="Translucent">
		<layout:VerticalLayout
			class="sapUiContentPadding"
			width="auto">
			<layout:content>
				<List
					headerText="What's new"
					items="{news>/News}" >
					<FeedListItem
						sender="{news>content}"
						icon="{news>image}" 	
						iconActive="false"
						iconDensityAware="false"
						info="{news>source}"
						timestamp="{news>date}"
						text="{news>text}"
						convertLinksToAnchorTags="All"
						actions="{}">
						<FeedListItemAction text="{Text}" icon="{Icon}" key="{Key}" press="onActionPressed" />
					</FeedListItem>
				</List>
			</layout:content>
		</layout:VerticalLayout>
			</FlexBox>
	</Page>
</mvc:View>
