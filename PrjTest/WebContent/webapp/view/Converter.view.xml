<mvc:View controllerName="sap.Sonif.controller.Converter"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout" xmlns:microchart="sap.suite.ui.microchart">

	<Page showHeader="false" backgroundDesign="Info">
		<!-- <subHeader class="subHeaderDesign"> -->
		<mvc:XMLView viewName="sap.Sonif.view.Toolbar" />
		<!-- </subHeader> -->
		<Panel class="sapUiNoContentPadding">
			<content>
				<Input id="bitcoin" type="Number" liveChange="bitcoinChange"
					width="50%" valueLiveUpdate="true" placeholder="Bitcoin" />
				<Input id="ethereum" type="Number" liveChange="ethereumChange"
					width="50%" valueLiveUpdate="true" placeholder="Ethereum" />
				<Input id="iota" type="Number" liveChange="iotaChange" width="50%"
					valueLiveUpdate="true" placeholder="IOTA" />
				<Input id="ripple" type="Number" liveChange="rippleChange"
					width="50%" valueLiveUpdate="true" placeholder="Ripple" />
				<Input id="dollar" type="Number" liveChange="dollarChange"
					width="100%" valueLiveUpdate="true" placeholder="Dollar" />
			</content>
		</Panel>
	</Page>

</mvc:View>
