<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout" xmlns:suite="sap.suite.ui.commons"
	controllerName="sap.suite.ui.commons.PrjTest.controller.Masters"
	displayBlock="true">
		
	<Page id="masters" initialDetail="detailJack" initialMaster="masterJack" orientationChange="onOrientationChange">
	<mvc:XMLView viewName="sap.suite.ui.commons.PrjTest.view.Toolbar" />
	<content>
		<detailPages>
		
			<Page id="detailJack" title="Jack Schwager" class="sapUiStdPage">
				<content>
					<Label text="Details about Jack Schwager" />
					<image src="images/Laurent_Dunois.png"/>
					<Button text="Go to Detail page 2" press="onPressNavToDetailJack" />
				</content>
			</Page>
			
			<Page id="detailsJack" title="About Jack" class="sapUiStdPage" showNavButton="true"
					navButtonText="Back" navButtonPress="onPressDetailBack">
				<content>
					<VBox class="sapUiSmallMargin">
						<Text text="Renumit autor, manager de fond şi expert în investiţii, Jack Schwager este binecunoscut în industrie pentru bestseller-ul Market Wizards. Pe parcursul webinarului, Jack vă va oferi unele sfaturi cruciale în materie de teorie și psihologie în tranzacționare - ajutându-vă astfel să deveniți un trader mai complex." />
					</VBox>
				</content>
			</Page>
			
			<Page id="detailSteve" title="Steve Nison" class="sapUiStdPage" showNavButton="true"
					navButtonText="Back" navButtonPress="onPressDetailBack">

				<content>
					<Label text="Details about Steve Nison" />
					<image src="images/Richard_Wilson.png"/>
					<Button text="Go to Detail page 2" press="onPressNavToDetailSteve" />
				</content>
			</Page>
			
			<Page id="detailsSteve" title="About Steve" class="sapUiStdPage" showNavButton="true"
					navButtonText="Back" navButtonPress="onPressDetailBack">
				<content>
					<VBox class="sapUiSmallMargin">
						<Text text="Cunoscut sub numele de Părintele lumânărilor japoneze, Steve Nison este autoritatea principală din lume în privința acestora. Această legendă a industriei vă va învăța câteva tehnici și strategii de tranzacționare de vârf pentru a fi utilizate împreună cu unul dintre cele mai populare tipuri de tranzacționare din toate timpurile." />
					</VBox>
				</content>
			</Page>
			
		</detailPages>
		
		<masterPages>
			<Page id="master" title="Masters" icon="sap-icon://action" class="sapUiStdPage">
				<content>
					<List>
						<items>
							<StandardListItem title="To Steve" type="Navigation" press="onPressGoToSteve"/>
							<StandardListItem title="To Jack" type="Navigation" press="onPressGoToJack"/>
						</items>
					</List>
				</content>
			</Page>
			
			<Page id="masterJack" title="Jack Schwager" icon="sap-icon://action" class="sapUiStdPage" showNavButton="true"
					navButtonPress="onPressMasterBack">
				<content>
					<List itemPress="onListItemPress">
						<items>
							<StandardListItem title="To Details about Jack" type="Active" />
							<StandardListItem title="To Details about Jack part 2" type="Active" />
						</items>
					</List>
				</content>
			</Page>
			
			<Page id="masterSteve" title="Steve Nison" icon="sap-icon://action" class="sapUiStdPage" showNavButton="true"
					navButtonPress="onPressMasterBack">
				<content>
					<List itemPress="onListItemPress">
						<items>
							<StandardListItem title="To Detail about Steve" type="Active" />
							<StandardListItem title="To Details about Steve part 2" type="Active" />
						</items>
					</List>
				</content>
			</Page>
		</masterPages>
		</content>
</Page>
</mvc:View>